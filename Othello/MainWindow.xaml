<Window x:Class="Othello.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.WPF"
        xmlns:sharedvm="clr-namespace:Othello.Shared.ViewModel;assembly=Othello.Shared"
        mc:Ignorable="d"
        Title="Othello" Height="500" Width="500" Background="#00AB66">
    <Window.DataContext>
        <sharedvm:OthelloViewModel/>
    </Window.DataContext>
    
    <!--Styles-->
    <Window.Resources>
        <Style x:Key="gameSquares" TargetType="Button">
            <Setter Property="Background" Value="#00AB66"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value=".35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <!--1 column for the game, 1 column for the gameplay-->
    <!--10 game rows and 2 header rows-->
    <Grid x:Name="GameGrid">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="260px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="100px"/>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        
        <!--Row 1 ... The menu-->
        <Menu
            Grid.ColumnSpan="15"
            HorizontalAlignment="Left"
            Background="DarkGray"
            Foreground="Black">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_Game">
                <MenuItem Header="_New Game"
                          Click="NewGame"/>
                <MenuItem Header="_Statistics"
                          Click="DisplayStats"/>
                <MenuItem Header="_Quit"
                          Click="QuitGame"/>
            </MenuItem>
            <MenuItem Header="_Move">
                <MenuItem Header="_Undo Move"
                          Click="Undo"/>
                <MenuItem Header="_Redo Move"
                          Click="Redo"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"
                          Click="About"/>
            </MenuItem>
        </Menu>
        
        <!--Row 2 ... Title Image -->
        <StackPanel Grid.ColumnSpan="15" Grid.Row="1" HorizontalAlignment="Center">
            <Image Height="80" Margin="10" Source=".\Resources\othello.png"/>
        </StackPanel>
        
        <!--Row3 ... Buttons to do what the menu offers-->
        <Button Background="DarkGray" 
                Grid.Row="2"
                Grid.Column="1" 
                Grid.ColumnSpan="3"
                Content="Restart"/>
        <Button Background="DarkGray"
                Grid.Row="2"
                Grid.Column="5"
                Grid.ColumnSpan="3"
                Content="Undo"/>
        <Button Background="DarkGray"
                Grid.Row="2"
                Grid.Column="9"
                Grid.ColumnSpan="3"
                Content="Redo"/>
        
        <!--Outline of the GameBoard-->
        <Rectangle Fill="Black" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="10"/>
        <Rectangle Fill="Black" Grid.Column="1" Grid.Row="4" Grid.RowSpan="10"/>
        <Rectangle Fill="Black" Grid.Column="1" Grid.Row="13" Grid.ColumnSpan="10"/>
        <Rectangle Fill="Black" Grid.Column="10" Grid.Row="4" Grid.RowSpan="10"/>
        <TextBlock Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" Text="A" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" Text="B" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" Text="C" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="5" HorizontalAlignment="Center" Text="D" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="6" HorizontalAlignment="Center" Text="E" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="7" HorizontalAlignment="Center" Text="F" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="8" HorizontalAlignment="Center" Text="G" Foreground="White"/>
        <TextBlock Grid.Row="4" Grid.Column="9" HorizontalAlignment="Center" Text="H" Foreground="White"/>
        <TextBlock Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" Text="1" Foreground="White"/>
        <TextBlock Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Text="2" Foreground="White"/>
        <TextBlock Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" Text="3" Foreground="White"/>
        <TextBlock Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center" Text="4" Foreground="White"/>
        <TextBlock Grid.Row="9" Grid.Column="1" HorizontalAlignment="Center" Text="5" Foreground="White"/>
        <TextBlock Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" Text="6" Foreground="White"/>
        <TextBlock Grid.Row="11" Grid.Column="1" HorizontalAlignment="Center" Text="7" Foreground="White"/>
        <TextBlock Grid.Row="12" Grid.Column="1" HorizontalAlignment="Center" Text="8" Foreground="White"/>
        
