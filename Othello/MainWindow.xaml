<Window x:Class="Othello.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.WPF"
        xmlns:sharedvm="clr-namespace:Othello.Shared.ViewModel;assembly=Othello.Shared"
        mc:Ignorable="d"
        Title="Othello"
        Height="750"
        Width="750"
        Background="#00AB66">
    <Window.DataContext>
        <sharedvm:OthelloViewModel />
    </Window.DataContext>

    <!--Styles-->
    <Window.Resources>
        <Style x:Key="gameText"
               TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
        </Style>
        <Style x:Key="gameSquares"
               TargetType="{x:Type Button}">
            
            <!--<Setter Property="Background"
                    Value="#00AB66" />
            <Setter Property="BorderBrush"
                    Value="Black" />
            <Setter Property="BorderThickness"
                    Value=".35" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness=".3" BorderBrush="Black">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="Red" />
                </Trigger>
                --><!--<Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Foreground"
                            Value="Blue" />
                </Trigger>--><!--
            </Style.Triggers>-->
        </Style>
    </Window.Resources>

    <!--1 column for the game, 1 column for the gameplay-->
    <!--10 game rows and 2 header rows-->
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <!--Row 1 ... The menu-->
        <Menu Grid.ColumnSpan="5"
              HorizontalAlignment="Left"
              Background="DarkGray"
              Foreground="Black">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_Game">
                <MenuItem Header="_New Game"
                          Click="NewGame" />
                <MenuItem Header="_Statistics"
                          Click="DisplayStats" />
                <MenuItem Header="_Quit"
                          Click="QuitGame" />
            </MenuItem>
            <MenuItem Header="_Move">
                <MenuItem Header="_Undo Move"
                          Click="Undo" />
                <MenuItem Header="_Redo Move"
                          Click="Redo" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"
                          Click="About" />
            </MenuItem>
        </Menu>

        <!--Row 2 ... Title Image -->
        <StackPanel Grid.Row="1">
            <Image Height="80"
                   Margin="10"
                   Source=".\Resources\othello.png" />
        </StackPanel>

        <!--Row3 ... Buttons to do what the menu offers-->
        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">
            <Button Background="DarkGray"
                    Padding="10"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Restart" />
            <Button Background="DarkGray"
                    Padding="10"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="Undo" />
            <Button Background="DarkGray"
                    Padding="10"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Redo" />
            <Slider Minimum="20"
                    Value="40"
                    Maximum="40"
                    Padding="10"
                    Margin="10"
                    x:Name="Slider"
                    MinWidth="50"
                    Grid.ColumnSpan="2" />
        </StackPanel>

        <!--Row 4 === the game grid-->
        <Grid x:Name="GameGrid"
              Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="{Binding ElementName=Slider, Path=Value}" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
                <RowDefinition Height="{Binding ElementName=Slider, Path=Value}" />
