                       Grid.Row="0"
                       Grid.ColumnSpan="10" />
            <Rectangle Fill="Black"
                       Grid.Column="0"
                       Grid.Row="0"
                       Grid.RowSpan="10" />
            <Rectangle Fill="Black"
                       Grid.Column="0"
                       Grid.Row="9"
